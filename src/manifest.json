{
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon-32.png"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "name": "Bid Support",
  "description": "A chrome extension for easy access",
  "permissions": [
    "activeTab",
    "tabs",
    "contextMenus",
    "https://*.upwork.com/*",
    "storage"
  ],
  "web_accessible_resources": [
    "inject.js",
    "bootstrap.min.css",
    "content.styles.css"

  ],
  "content_scripts": [{
    "matches": [
      "https://*.upwork.com/*"
    ],
    "js": [
      "bootstrap.min.js",
      "contentScript.js"
    ],
    "css": [
      "content.styles.css"
    ],
    "all_frames": true,
    "run_at": "document_start"
  }],
  "background": {
    "service_worker": "background.js"
  }
}